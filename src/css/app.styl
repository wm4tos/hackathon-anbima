@import url('https://fonts.googleapis.com/css?family=Red+Hat+Display:400,500,700,900&display=swap');

body
  font-family 'Red Hat Display', 'sans-serif'

h1, h2, h3, h4, h5, h6, p
  margin-bottom 0
  margin-top 0

h1
  font-size 28px
  line-height 4rem
  font-weight 900

h2
  font-size 24px

h3
  font-size 20px

p
  font-size 16px

img
  max-width 100%

.q-page
  padding 24px

a
  text-decoration none

.q-field
  &__native
    span
      color $primary
      font-weight 700
      font-size 16px
  &__append
    i
      color $primary
